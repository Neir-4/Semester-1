program lab3_1;
uses crt;
var a,b,n,hasil:integer;
begin
    clrscr;
    write('Masukkan nilai n: '); readln(n);
    for a := n downto 1 do //untuk nilai n menurun
    begin
        hasil := 0; //nilai hasil di simpan berulang"
        for b:=1 to a do
        begin
            write(b); //masuk nilai a
            if b < a then //sebagai batas
            begin
                write(' + ');
            end;
            hasil:= hasil + b;//nilai hasil disimpan dan dikeluarkan berulang"
        end;
        writeln(' = ',hasil);//penjumlahan semuanya
    end;
end.
